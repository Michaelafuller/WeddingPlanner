@model Wedding
<div class="container-fluid">
    <h1>Plan Your Wedding</h1>
    <form asp-controller="Wedding" asp-action="CreateWedding" method="post">
        <div class="form-group">
            <label asp-for="WedderOne">Wedder One</label>
            <span asp-validation-for="WedderOne" class="text-danger"></span>
            <input asp-for="WedderOne" class="form-control mb-3">

            <label asp-for="WedderTwo">Wedder One</label>
            <span asp-validation-for="WedderTwo" class="text-danger"></span>
            <input asp-for="WedderTwo" class="form-control mb-3">

            <label asp-for="Date"></label>
            <span asp-validation-for="Date" class="text-danger"></span>
            <input asp-for="Date" class="form-control mb-3">

            <label asp-for="WeddingAddress">Wedding Address</label>
            <span asp-validation-for="WeddingAddress" class="text-danger"></span>
            <input asp-for="WeddingAddress" class="form-control mb-3">

            <button class="btn btn-success">Create</button>
        </div>
    </form>
</div>